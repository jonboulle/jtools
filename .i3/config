#bindsym $mod+d exec --no-startup-id j4-dmenu-desktop
bindsym $mod+d exec --no-startup-id rofi -show drun

# toggle connected displays between {int, int+ext mirror, ext}
# https://github.com/jonboulle/jtools/blob/master/bin/toggledisplays.sh
bindsym $mod+Shift+d exec toggledisplays.sh

# change focus
bindsym $alt+Tab focus left
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move the current workspace to the next output
# (effectively toggles when you only have two outputs)
bindsym $mod+Left move workspace to output left
bindsym $mod+Down move workspace to output down
bindsym $mod+Right move workspace to output right
bindsym $mod+Up move workspace to output up

